# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=telegram_auto_sender_v2

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-for-sessions

# CORS & Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Redis Configuration (for Celery/Cache)
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Pydantic Configuration
PYDANTIC_PRIVATE_ALLOW_UNHANDLED_SCHEMA_TYPES=1

# Telegram API (these would be user-specific)
# TELEGRAM_API_ID=your_api_id
# TELEGRAM_API_HASH=your_api_hash

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn